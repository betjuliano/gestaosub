# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Domain Configuration
DOMAIN=gestaodeartigos.iaprojetos.com.br
ACME_EMAIL=admin@iaprojetos.com.br

# Database Configuration
DB_NAME=gestaosub
DB_USER=gestaosub_user
DB_PASSWORD=your-secure-database-password-here

# Application Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Traefik Dashboard Authentication (bcrypt hash)
# Generate with: htpasswd -nb admin your-password
TRAEFIK_AUTH_USERS=admin:$$2y$$10$$...

# Security Configuration
COOKIE_SECURE=true
CORS_ORIGIN=https://gestaodeartigos.iaprojetos.com.br

# Monitoring Configuration (Optional)
ENABLE_METRICS=true
METRICS_PORT=9090