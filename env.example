# Configurações do Banco de Dados
DATABASE_URL=postgresql://username:password@localhost:5432/gestaosub
DB_POOL_SIZE=20
DB_POOL_IDLE_TIMEOUT=30
DB_CONNECT_TIMEOUT=10
DB_SSL=prefer

# Configurações de Autenticação
JWT_SECRET=your-super-secure-jwt-secret-here
COOKIE_SECRET=your-super-secure-cookie-secret-here

# Credenciais do Administrador (ALTERE IMEDIATAMENTE)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-super-secure-admin-password

# Configurações da Aplicação
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
DOMAIN=localhost

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=30

# Configurações de Segurança
ENABLE_COMPRESSION=true
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Configurações de Log
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Configurações AWS S3 (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Configurações SMTP (opcional)
SMTP_HOST=
SMTP_USER=
SMTP_PASS=
SMTP_PORT=587
SMTP_FROM=

# Configurações OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Configurações LLM (opcional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
LLM_PROVIDER=openai

# Configurações de Produção
ACME_EMAIL=admin@yourdomain.com
